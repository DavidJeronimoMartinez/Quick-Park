<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="720.0"
      prefWidth="1280.0"
      stylesheets="@styles.css"
      style="-fx-background-color: #f4f6f9;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controllers.EstacionamientoController">

    <HBox alignment="CENTER_LEFT"
          spacing="20.0"
          style="-fx-background-color: #8D203D;"
          prefHeight="90">

        <Button onAction="#volverAlMenu"
                style="-fx-background-color: transparent; -fx-cursor: hand;">
            <Label text="â†"
                   style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
        </Button>

        <Label fx:id="lblTitulo"
               text="ESTACIONAMIENTO 3"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <ScrollPane VBox.vgrow="ALWAYS"
                fitToWidth="true"
                style="-fx-background: transparent;">

        <VBox spacing="40">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <VBox spacing="15">
                <Label text="ZONA AUTOS"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <GridPane fx:id="gridAutos"
                          hgap="15"
                          vgap="15"/>
            </VBox>

            <VBox spacing="15">
                <Label text="ZONA MOTOS"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <GridPane fx:id="gridMotos"
                          hgap="15"
                          vgap="15"/>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT"
          spacing="40"
          prefHeight="70"
          style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-width: 1 0 0 0;">

        <Label fx:id="lblDispCoches"
               text="Coches Libres: --"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

        <Label fx:id="lblDispMotos"
               text="Motos Libres: --"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>

        <HBox.margin>
            <Insets right="40.0"/>
        </HBox.margin>

    </HBox>

</VBox>