<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #F2E8CF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.DetalleRegistroController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="130.0" spacing="20.0" style="-fx-background-color: #8D203D;">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Button fx:id="btnRegresar" onAction="#volver" style="-fx-background-color: transparent; -fx-cursor: hand;">
                     <graphic>
                        <StackPane>
                           <Circle fill="WHITE" radius="30.0" />
                           <Circle fill="#8D203D" radius="26.0" />
                           <Label style="-fx-font-size: 25px; -fx-font-weight: bold;" text="←" textFill="WHITE" />
                        </StackPane>
                     </graphic>
                  </Button>
                  <Label style="-fx-font-weight: bold;" text="Regresar" textFill="WHITE" />
               </children>
               <padding><Insets left="40.0" /></padding>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-weight: bold; -fx-font-size: 80px; -fx-font-family: 'Arial Black';" text="QUICK-PARK" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Pane prefWidth="120.0" />
         </children>
      </HBox>

      <HBox alignment="CENTER" spacing="60.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="btnModificar" onAction="#activarEdicion" prefHeight="55.0" prefWidth="250.0" 
                          style="-fx-background-color: #003366; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-font-size: 16px; -fx-cursor: hand;" text="Modificar datos" />
                  
                  <Button fx:id="btnEliminar" onAction="#eliminarRegistro" prefHeight="55.0" prefWidth="250.0" 
                          style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-font-size: 16px; -fx-cursor: hand;" text="Eliminar conductor" />
               </children>
            </VBox>

            <VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="800.0" 
                  style="-fx-background-color: white; -fx-border-color: #28a745; -fx-border-width: 3; -fx-border-radius: 20; -fx-background-radius: 20;">
               <padding><Insets bottom="30.0" left="40.0" right="40.0" top="20.0" /></padding>
               <children>
                  <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #8D203D;" text="Datos del Registro">
                     <VBox.margin><Insets bottom="20.0" /></VBox.margin>
                  </Label>

                  <GridPane hgap="30.0" vgap="15.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Matrícula / Num Empleado:" />
                              <TextField fx:id="txtMatricula" editable="false" opacity="0.5" prefHeight="40.0" style="-fx-border-color: #28a745; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.rowIndex="1">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Rol:" />
                              <ComboBox fx:id="comboRol" disable="true" maxWidth="1.7976931348623157E308" opacity="0.5" prefHeight="40.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Placa:" />
                              <TextField fx:id="txtPlaca" editable="false" opacity="0.5" prefHeight="40.0" style="-fx-border-color: #28a745; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Marca:" />
                              <TextField fx:id="txtMarca" editable="false" opacity="0.5" prefHeight="40.0" style="-fx-border-color: #28a745; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Modelo:" />
                              <TextField fx:id="txtModelo" editable="false" opacity="0.5" prefHeight="40.0" style="-fx-border-color: #28a745; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.rowIndex="2">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Tipo de Vehículo:" />
                              <ComboBox fx:id="comboTipo" disable="true" maxWidth="1.7976931348623157E308" opacity="0.5" prefHeight="40.0" />
                           </children>
                        </VBox>
                     </children>
                  </GridPane>

                  <HBox alignment="BOTTOM_RIGHT" spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="btnCancelar" onAction="#cancelarEdicion" prefHeight="40.0" prefWidth="120.0" 
                                style="-fx-background-color: #8D203D; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="CANCELAR" visible="false" />
                        <Button fx:id="btnGuardar" onAction="#guardarCambios" prefHeight="40.0" prefWidth="120.0" 
                                style="-fx-background-color: #2D6A4F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="GUARDAR" visible="false" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>