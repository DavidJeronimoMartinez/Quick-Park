<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<StackPane prefHeight="650.0" prefWidth="850.0" styleClass="fondo-app" stylesheets="@/styles.css" 
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" maxHeight="550.0" maxWidth="450.0" spacing="15.0" styleClass="card">
         <children>
            <ImageView fx:id="imgLogo" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/logo.jpg" />
               </image>
               <clip>
                  <Circle centerX="110.0" centerY="110.0" radius="110.0" />
               </clip>
            </ImageView>

            <Label text="INICIAR SESIÓN" style="-fx-font-size: 20px; -fx-font-weight: bold;" textFill="#545454">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            
            <VBox maxWidth="320.0" spacing="15.0">
               <children>
                  <TextField fx:id="txtNum" prefHeight="45.0" promptText="Número de Empleado" />
                  <PasswordField fx:id="txtPassword" prefHeight="45.0" promptText="Contraseña" />
               </children>
            </VBox>
            
            <Button onAction="#login" prefHeight="50.0" prefWidth="300.0" styleClass="btn-primary" text="Iniciar Turno" />
            
            <Button onAction="#irARegistro" styleClass="btn-link" text="¿No tienes cuenta? Regístrate aquí" />
            
            <Label fx:id="mensaje" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="25.0" />
         </padding>
      </VBox>
   </children>
</StackPane>