<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.BienvenidaController">

   <children>

      <Label layoutX="130.0" layoutY="20.0" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="BIENVENIDO AL SISTEMA" />

      <Label fx:id="lblMensaje" layoutX="155.0" layoutY="55.0" text="Guardia detectado..." />

      <!-- ================= CONDUCTOR ================= -->

      <Label layoutX="129.0" layoutY="100.0" style="-fx-font-weight: bold;" text="Datos del Conductor" />

      <Label layoutX="114.0" layoutY="130.0" text="Matrícula / Num Empleado:" />
      <TextField fx:id="txtMatricula" layoutX="274.0" layoutY="125.0" prefWidth="200.0" />

      <Label layoutX="197.0" layoutY="170.0" text="Rol:" />
      <ComboBox fx:id="comboRol" layoutX="274.0" layoutY="165.0" prefWidth="200.0" />

      <!-- ================= AUTO ================= -->

      <Label layoutX="171.0" layoutY="220.0" style="-fx-font-weight: bold;" text="Datos del Auto" />

      <Label layoutX="195.0" layoutY="250.0" text="Placa:" />
      <TextField fx:id="txtPlaca" layoutX="274.0" layoutY="245.0" prefWidth="200.0" />

      <Label layoutX="194.0" layoutY="290.0" text="Marca:" />
      <TextField fx:id="txtMarca" layoutX="274.0" layoutY="285.0" prefWidth="200.0" />

      <Label layoutX="192.0" layoutY="330.0" text="Modelo:" />
      <TextField fx:id="txtModelo" layoutX="273.0" layoutY="325.0" prefWidth="200.0" />

      <!-- BOTÓN GUARDAR -->

      <Button layoutX="341.0" layoutY="380.0" onAction="#guardarDatos" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar" />

      <!-- CERRAR SESIÓN -->

      <Button onAction="#cerrarSesion" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cerrar Sesión" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
      <Button layoutX="27.0" layoutY="238.0"
        onAction="#abrirRegistros"
        style="-fx-background-color: #4786D1; -fx-text-fill: white;"
        text="Ver Registros" />
   </children>
</AnchorPane>
