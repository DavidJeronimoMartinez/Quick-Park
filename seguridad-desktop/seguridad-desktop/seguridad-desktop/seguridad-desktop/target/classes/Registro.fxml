<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.RegistroController">
    <children>
        <Label text="Registro de Nuevo Guardia">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        
        <TextField fx:id="txtNum" promptText="Número de Empleado (PK)" />
        
        <TextField fx:id="txtNombre" promptText="Nombre(s)" />
        
        <TextField fx:id="txtApellidoP" promptText="Apellido Paterno" />
        
        <TextField fx:id="txtApellidoM" promptText="Apellido Materno" />
        
        <PasswordField fx:id="txtPass" promptText="Contraseña" />
        
        <PasswordField fx:id="txtPassConfirm" promptText="Confirmar Contraseña" />
        
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#registrar" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Registrar Usuario" />
        
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#volverLogin" text="Volver al Login" />
        
        <Label fx:id="mensaje" text="..." textFill="#616161" />
    </children>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
</VBox>